# Compilador
CXX = g++

# Flags de compilaci칩n
CXXFLAGS = -Wall -Wextra -std=c++17 -g -I includes

# Detectar autom치ticamente todos los .cpp en src/
SRC = $(wildcard src/*.cpp)

# Generar los nombres de los objetos correspondientes
OBJ = $(SRC:.cpp=.o)

# Nombre del ejecutable
TARGET = combate

# Regla principal
all: $(TARGET)

# C칩mo generar el ejecutable
$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJ)

# C칩mo compilar cada .cpp a .o
src/%.o: src/%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Limpiar archivos compilados
clean:
	rm -f $(OBJ) $(TARGET)

# Limpiar todo incluyendo backups
mrproper: clean
	rm -f *~
